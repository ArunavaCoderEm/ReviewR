generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  clerkid  String    @unique
  name     String?
  websites Website[]
  reviews  Review[]
}

model Website {
  id          String   @id @default(uuid())
  url         String
  reviewLink  String
  createdBy   User     @relation(fields: [createdById], references: [clerkid])
  createdById String
  reviews     Review[]
}

model Review {
  id        String  @id @default(uuid())
  content   String
  rating    Int
  website   Website @relation(fields: [websiteId], references: [id])
  websiteId String 
  reviewer  String
  user      User    @relation(fields: [userId], references: [id])
  userId    String
}
